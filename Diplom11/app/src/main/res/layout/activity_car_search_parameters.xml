<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.diplom11.diplom11.CarSearchParameters">

    <ScrollView
        android:id="@+id/scrollView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/textView54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Откуда:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/carSPFromCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView54" />

            <TextView
                android:id="@+id/textView55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/carSPFromCity"
                android:text="Куда:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/carSPToCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView55" />

            <TextView
                android:id="@+id/textView56"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/carSPToCity"
                android:text="Тип кузова"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/carSPBodyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView56" />

            <TextView
                android:id="@+id/textView57"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/carSPBodyType"
                android:text="Тип загрузки"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/carSPLoadType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView57" />

            <TextView
                android:id="@+id/textView58"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/carSPLoadType"
                android:text="Тоннаж от "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/carSPWeightFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carSPLoadType"
                android:layout_toRightOf="@+id/textView58"
                android:ems="5"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView59"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carSPLoadType"
                android:layout_toEndOf="@+id/carSPWeightFrom"
                android:text="до"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/carSPWeightTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carSPLoadType"
                android:layout_toEndOf="@+id/textView59"
                android:layout_toRightOf="@+id/textView59"
                android:ems="5"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/carSPWeightFrom"
                android:text="Объем от"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/carSPVolumeFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/carSPWeightFrom"
                android:layout_alignStart="@+id/carSPWeightFrom"
                android:layout_below="@+id/carSPWeightFrom"
                android:ems="5"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView61"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/carSPVolumeFrom"
                android:layout_toEndOf="@+id/carSPVolumeFrom"
                android:layout_toRightOf="@+id/carSPVolumeFrom"
                android:text="до"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/carSPVolumeTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carSPWeightTo"
                android:layout_toEndOf="@+id/textView61"
                android:layout_toRightOf="@+id/textView61"
                android:ems="5"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/textView62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/carSPVolumeFrom"
                android:text="Период от "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/carSPOtprDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/carSPVolumeFrom"
                android:layout_alignStart="@+id/carSPVolumeFrom"
                android:layout_below="@+id/carSPVolumeFrom"
                android:ems="5"
                android:inputType="date" />

            <TextView
                android:id="@+id/textView63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carSPVolumeFrom"
                android:layout_toEndOf="@+id/carSPVolumeFrom"
                android:layout_toRightOf="@+id/carSPVolumeFrom"
                android:text="до"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/carSPArriveDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView63"
                android:layout_toEndOf="@+id/textView63"
                android:layout_toRightOf="@+id/textView63"
                android:ems="5"
                android:inputType="date" />

            <Button
                android:id="@+id/carSPSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/carSPArriveDate"
                android:text="Искать" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
